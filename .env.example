# Server Configuration
SERVER_PORT=8080
SERVER_HOST=0.0.0.0
SERVER_READ_TIMEOUT=30
SERVER_WRITE_TIMEOUT=30

# Database Configuration
# Supported types: postgres, postgresql, sqlite, sqlserver, mssql
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_NAME=channel_api
DB_SSL_MODE=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_MAX_LIFETIME=5
# Migrations path - relative to application working directory
# For development: migrations
# For Docker: ./migrations
DB_MIGRATIONS_PATH=./migrations

# SQLite Configuration (when DB_TYPE=sqlite)
# DB_NAME=./notification.db

# SQL Server Configuration (when DB_TYPE=sqlserver)
# DB_HOST=localhost
# DB_PORT=1433
# DB_USER=sa
# DB_PASSWORD=your_password_here
# DB_NAME=channel_api

# NATS Configuration
NATS_URL=nats://localhost:4222
NATS_MAX_RECONNECTS=10
NATS_RECONNECT_WAIT=2
NATS_REQUEST_TIMEOUT=30
NATS_SUBJECT_PREFIX=eco1j.infra.eventcenter

# Logger Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT_PATH=stdout